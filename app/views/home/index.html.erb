<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <a class="navbar-brand" href="/">Fedex Overweight</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
    <span class="navbar-toggler-icon"></span>
  </button>
</nav>

<div class="container" style="margin-top:30px">
  <div class="row">
    <div class="col-sm-12">

      <% if flash[:error] %>
        <div class="alert alert-danger" role="alert">
          <%= flash[:error] %>
        </div>
      <% end %>

      <% if @data %>
        <div class="alert alert-danger" role="alert">
          <%= @data %>
        </div>
      <% end %>
      
      <h2>Import labels file</h2>

      <%= form_with(url: {action: :generate_report}, multipart: true) do %>
        <div class="form-group">
          <label for="labels">Labels jsons: </label>
          <%= file_field_tag 'labels' %>
        </div>
        <%= submit_tag("Submit", :class => "btn btn-primary") %>
      <% end %>
      
      <br>
      
      <h2>Results</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Tracking Number</th>
            <th>Label Weight (Kg)</th>
            <th>Fedex Weight (Kg)</th>
            <th>Overweight?</th>
            <th>Exceeding Weight(Kg)</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
            <td>@mdo</td>
            <td>aaa</td>
          </tr>
          <tr>
            <th scope="row">2</th>
            <td>Jacob</td>
            <td>Thornton</td>
            <td>@fat</td>
            <td>aaast</td>
          </tr>
          <tr>
            <th scope="row">3</th>
            <td>Larry</td>
            <td>the Bird</td>
            <td>@twitter</td>
            <td>89jaksr</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>